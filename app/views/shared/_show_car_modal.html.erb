<div id="myModal_<%= carmodel.id %>" class="modal fade" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-body">
      <div class="modal-content">
        <div class="car-modal">
          <div class="car-modal-info">

            <div class="left-section">
              <div class="title">
                <div class="modal-title">
                  <p><%= carmodel.make.name %>, <%= carmodel.name %></p>
                </div>
              </div>
              <div class="modal-vehicle-image">
                <%= cl_image_tag carmodel.photo, height: 300, width: 400, class: 'modal-image' %>
              </div>
              <div class="modal-vehicle-info">
                <div class="vehicle-info">
                  <p>Type: <%= carmodel.subcategory.category.name %>/<%= carmodel.subcategory.name %></p>
                </div>
                <div class="vehicle-info">
                  <p>Year: <%# carmodel.year %></p>
                </div>
                <div class="vehicle-info">
                  <% if carmodel.make_id = 29 %>
                    <p>Gear box: Manual</p>
                  <% else %>
                    <p>Gear box: Automatic</p>
                  <% end %>
                </div>
                <div class="vehicle-info">
                  <p>Aircon: Yes</p>
                </div>
                <div class="vehicle-info">
                  <p>Horsepower: <%= carmodel.power %> hp</p>
                </div>
                <div class="vehicle-info">
                  <p>Body Type: <%= carmodel.bodytype %></p>
                </div>
                <div class="vehicle-info">
                  <% if carmodel.cargolength? %>
                    <p>Cargo length: <%= carmodel.cargolength %> feet</p>
                  <% else %>
                    <p>Cargo length: N/A</p>
                  <% end %>

                </div>
                <div class="vehicle-info">
                  <p>Payload: <%= carmodel.payload %> Tons</p>
                </div>
                <div class="vehicle-info">
                  <p>Fuel: <% Vehicle.where(carmodel: carmodel).each do |vehicle| %>
                     <%= Fuel.find( vehicle.fuel_id).name %>, </p>
                  <% end %>
                </div>
                <div class="vehicle-info">
                  <% if carmodel.grosvw.nil? %>
                    <p>Gross Vehicle Weight: N/A</p>
                  <% else %>
                    <p>Gross Vehicle Weight: <%= carmodel.grosvw %> Tons</p>
                  <% end %>
                </div>
                <div class="vehicle-info">
                  <p>Seats: <%= carmodel.seats %></p>
                </div>
                <div class="vehicle-info">
                  <% Vehicle.where(carmodel_id: carmodel.id).each do |vehicle| %>
                    <% array = [] %>
                    <% array << vehicle.mileage %>
                      <p>Mileage: <% array.each do |mileage| %> <%=   mileage.to_s + ","%> </p>
                    <% end %>
                  <% end %>
                </div>

              </div>
            </div>

            <div class="right-section">
              <div class="make-image">
                <%= cl_image_tag carmodel.make.logo, class: 'modal-logo'  %>
              </div>
              <div class="modal-make-info">
                <div class="make-info">
                  <p>Make: <%= carmodel.make.name %></p>
                </div>
                <div class="make-info">
                  <p>Country Origin: <%= carmodel.make.country %></p>
                </div>
                <div class="make-info">
                  <p>New: YES</p>
                </div>
                <div class="make-info">
                  <p>Spare Available: Full Stock</p>
                </div>
                <div class="make-info">
                  <p>Stock Available: <% arr = [0..15] %> <%= rand(1..15) %> <%# Vehicle.where(carmodel_id: carmodel.id).count %></p>
                </div>
              </div>
              <div class="users-check">
                <% arr = [0..15] %>
                <p><%= rand(1..15) %> people have viewed this vehicle today!</p>
              </div>
              <div class="request-quote">
                <div class="request-btn">
                  <a href="mailto:sales@africarriers.co.tz?&subject=<%= carmodel.make.name %> <%= carmodel.name %> Enquiry & Price&body=Dear Sales Team, I would like to enquire about the price and availability of <%= carmodel.make.name %> <%= carmodel.name %>">


                    <p>Request Quote</p>
                  </a>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
